<div class="signInContainer">
  <div class="logo ir">Hoodie Pocket</div>
  <h2 class="top">{{a}} Welcome to {{appInfo.name}}'s Pocket</h2>
  <form class="signIn form-horizontal">
    <section class="noBorder">
      <span class="error"></span>
      <div class="control-group">
        <label>Admin password</label>
        <div class="controls">
          <input id="signInPassword" type="password" autofocus>
        </div>
      </div>
      <div class="control-group">
        <label></label>
        <div class="controls">
          <button id="signIn" type="submit" class="btn">Sign in!</button>
        </div>
      </div>
    </section>
  </form>
</div>
